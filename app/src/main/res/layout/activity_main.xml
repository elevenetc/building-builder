<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.elevenetc.buildingbuilder.BuildingBuilderView
        android:id="@+id/builder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W:" />

            <TextView
                android:id="@+id/text_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:minEms="2"
                tools:text="999" />

            <Button
                android:id="@+id/btn_reduce_width"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="-" />

            <Button
                android:id="@+id/btn_add_width"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:" />

            <TextView
                android:id="@+id/text_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:minEms="2"
                tools:text="123" />

            <Button
                android:id="@+id/btn_reduce_height"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="-" />

            <Button
                android:id="@+id/btn_add_height"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="+" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>